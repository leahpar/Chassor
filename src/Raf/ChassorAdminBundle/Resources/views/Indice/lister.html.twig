{% extends "ChassorAdminBundle::admin-layout.html.twig" %}
 
{% block adminContent %}
<a class="btn" href="{{ path('admin_indice_ajouter') }}">(+)</a>

<table class="stupid adminTable">
<thead>
<tr>
    <th class="sort" data-sort="string">Enigme</th>
    <th>Ordre</th>
    <th>Indice</th>
    <th></th>
</tr>
</thead>
<tbody>
{% for indice in liste %}
<tr>
    <td>{{ indice.enigme.codeInterne2 }}</td>
    <td>{{ indice.ordre }}</td>
    <td>{{ indice.indice }}</td>
    <td>
        <a class="btn" href="{{ path('admin_indice_modifier',  {'id': indice.id }) }}">(M)</a>
        <a class="btn" href="{{ path('admin_indice_supprimer',  {'id': indice.id }) }}">(S)</a>
    </td>
</tr>
{% endfor %}
</tbody>
</table>
 
{% endblock adminContent %}

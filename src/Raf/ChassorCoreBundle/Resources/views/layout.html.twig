{% spaceless %}
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="">
    <meta name="viewport" content="initial-scale = 0.9,maximum-scale = 0.9" />

    <link rel="icon" type="image/png" href="{{ asset('bundles/chassorcore/img/favicon.png') }}" />
    
    <title>{% block title %}Chassor{% endblock %}</title>

    {% javascripts
        'bundles/chassorcore/js/modernizr/*.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    
    <!-- les css -->
    {% stylesheets filter='cssrewrite'
        'bundles/chassorcore/css/*.css'
        'bundles/chassoradmin/css/*.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
    
</head>

<body class="{% if bodyClass is defined %}{{ bodyClass }}{% endif %}">
    <!--[if lt IE 7]>
        <p class="chromeframe">You are using an <strong>outdated</strong> browser.
        Please <a href="http://browsehappy.com/">upgrade your browser</a>
        or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a>
        to improve your experience.
        </p>
    <![endif]-->

    {# barre de header #}
    {% include "ChassorCoreBundle::layout-header.html.twig" %}
   
    {# les messages #}
    {% include "ChassorCoreBundle::layout-messages.html.twig" %}
   
    
    {% block body %}
    {% endblock body %}
    
    
    <!-- les js -->
    {# jQuery depuis le CDN de Google, ou fallback sur une copie locale #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="{{ asset('bundles/chassorcore/js/jquery/jquery-1.9.1.min.js') }}"><\/script>')</script>
    
    {% javascripts
        'bundles/chassorcore/js/plugins/*.js'
        'bundles/chassorcore/js/*.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    
    {# analytics #}
    <script>
	  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
	  ga('create', '{{ ga_tracking }}', 'chassor.com');
	  ga('send', 'pageview');
	</script>

</body>    
</html>
{% endspaceless %}

